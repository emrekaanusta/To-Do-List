<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="styles.css" >
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <ul class="nav navbar-nav">
            <li><a id="len1" class="hoverable" href="/">Daily Tasks</a></li>
            <li><a id="len4" class="hoverable" href="/about">Contact</a></li>
          </ul>
        </div>
      </nav>
    
    

    <h1 class="main_header">To-Do List</h1> 
    <div class="container-fluid">

      <div class = "daily_goals goal_div">
        <h1 class = "heads">Daily Home Activities &#127969</h1>
        <form action="/add_daily" method="POST">
            <input type="text" name="goal" placeholder="Goal">
            <button class="btn btn-primary" type="submit">Add Event</button>
        </form>
    
          <% if (locals.daily_goal && locals.daily_goal.length > 0) { %>
            <ul>
              <% locals.daily_goal.forEach((work, index) => { %>

                  <li  class = "enough"><%= work %></li>
                    <% if (locals.change && (locals.change == work)) { %>
                      <form action="/new_event_daily" method="post">
                        <input type="text" name="newgoal" placeholder="Enter your new event" >
                        <button class="btn btn-warning" type="submit">Change the Event</button>
                      </form>
                    <% } else { %>
                      <form action="/change_daily" method="post">
                        <input type="hidden" name="task" value="<%= work %>" class = "input">
                        <button type="submit" class="btn btn-warning input" >Change the Event</button>
                      </form>
                    <% } %>
                
      
                  <form action="/delete_daily" method="post">
                      <input type="hidden" name="task" value="<%= work %>" class = "input">
                      <button type="submit" class="btn btn-danger input">Delete the Event</button>
                  </form>
                

              <% }) %>
          </ul>
            
        <% } else { %>
            <p>No work tasks yet.</p>
        <% } %>
    
        </div>
    
        <div class = "work_goals goal_div">
          <h1 class = "heads">Work Related Things &#128187</h1>
          <form action="/add_work" method="POST">
            <input type="text" name="goal" placeholder="Goal">
            <button class="btn btn-primary" type="submit">Add Event</button>
        </form>
          <% if (locals.work_goal && locals.work_goal.length > 0) { %>
            <ul>

              <% locals.work_goal.forEach((work, index) => { %>
                  <li  class = "enough"><%= work %></li>
                    <% if (locals.changeb && (locals.changeb == work)) { %>
                      <form action="/new_event_work" method="post">
                        <input type="text" name="newgoal" placeholder="Enter your new event" >
                        <button class="btn btn-warning" type="submit">Change the Event</button>
                      </form>
                    <% } else { %>
                      <form action="/change_work" method="post">
                        <input type="hidden" name="task" value="<%= work %>">
                        <button type="submit" class="btn btn-warning" >Change the Event</button>
                      </form>
                    <% } %>
                
      
                  <form action="/delete_work" method="post">
                      <input type="hidden" name="task" value="<%= work %>">
                      <button type="submit" class="btn btn-danger">Delete the Event</button>
                  </form>
                
      
              <% }) %>
          </ul>
          
        
        <% } else { %>
            <p>No work tasks yet.</p>
        <% } %>
        </div>
    
        <div class= "hobbies goal_div" >
          <h1 class = "heads"> Free Time Activites &#9918; </h1>
          <form action="/add_hobby" method="POST">
            <input type="text" name="goal" placeholder="Goal">
            <button class="btn btn-primary" type="submit">Add Event</button>
        </form>
          <% if (locals.hobby && locals.hobby.length > 0) { %>
            <ul>
              <% locals.hobby.forEach((work, index) => { %>
          
                  <li class = "enough"><%= work %></li>
                    <% if (locals.changec && (locals.changec == work)) { %>
                      <form action="/new_event_hobby" method="post">
                        <input type="text" name="newgoal" placeholder="Enter your new event" >
                        <button class="btn btn-warning" type="submit">Change the Event</button>
                      </form>
                    <% } else { %>
                      <form action="/change_hobby" method="post">
                        <input type="hidden" name="task" value="<%= work %>">
                        <button type="submit" class="btn btn-warning" >Change the Event</button>
                      </form>
                    <% } %>
                
      
                  <form action="/delete_hobby" method="post">
                      <input type="hidden" name="task" value="<%= work %>">
                      <button type="submit" class="btn btn-danger">Delete the Event</button>
                  </form>
                

              <% }) %>
          </ul>
            
        <% } else { %>
            <p>No work tasks yet.</p>
        <% } %>
        </div>

    </div>

